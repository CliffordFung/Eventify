<body>
    <% include ./components/navbar%>
    <% include ./components/messages%>

    <!-- <h2>This is from user_profile_details.ejs</h2> -->
    <div class="car card-body mb-3 form-login">
        <h1><%= title %></h1>
        <p class='form-control'><strong>Name: </strong><%= user.firstName %> <%= user.lastName %></p>
        <p class='form-control'><strong>Username:</strong> <%= user.username %></p>
        <p class='form-control'><strong>Email: </strong><%= user.email %></p>
        <p class='form-control'><strong>City: </strong><%= user.city %></p>
        <p class='form-control'><strong>Date of Birth: </strong><%= moment(user.dateOfBirth).format('LL') %></p>
        <p class='form-control'><strong>Country: </strong><%= user.country %></p>
        <p class='form-control'><strong>bio: </strong><%= user.bio %></p>

        <form action="/users/update" method="get">
            <button class="btn btn-outline-secondary">Update Profile</button>
        </form>
    </div>
</body>
