    <html>

    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
        </script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
        </script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js">
        </script>
    </head>

    <body>
        <%include components/navbar.ejs%>
        <br/>
        <div class="container text-center" >
            <h2>My Events</h1>

                <h2>Events You're Hosting</h2>
                <% if (hostedEvents.length > 0) {%>
                    <ul class="list-group list-group-flush">
                        <% hostedEvents.forEach(function(event){ %>
                        <li class="list-group-item"><a href="<%=event.eventDetailUrl%>"><%= (event) ? event.eventName : ''%></a>
                        </li>
                        </br>
                        <% }); %>
                    </ul>
                <% } %>
                
            <h2>Planned Events</h2>
            <% if (plannedEvents.length > 0) {%>
                <ul class="list-group list-group-flush">
                    <% plannedEvents.forEach(function(event){ %>
                    <li class="list-group-item"><a href="<%=event.eventDetailUrl%>"><%= (event) ? event.eventName : ''%></a>
                    </li>
                    </br>
                    <% }); %>
                </ul>
            <%}%>

            <h2>Past Events</h2>
            <% if (pastEvents.length > 0) {%>
                <ul class="list-group list-group-flush">
                    <% pastEvents.forEach(function(event){ %>
                    <li class="list-group-item"><a href="<%=event.eventDetailUrl%>"><%= (event) ? event.eventName : ''%></a>
                    </li>
                    </br>
                    <% }); %>
                </ul>
            <% } %>
        </div>
    </body>
    </html>